@using Data
@using UI.Localization

@inject IStringResourceManager ResourceManager

@typeparam TElement

@if (Elements == null)
{
    <PageLoading />
}
else if (!Elements.Any())
{
    <Alert Type=AlertType.Warning Message=@ResourceManager["DataIsLoading"] />
}
else
{
    @ContentTemplate
}

@code{
    [Parameter]
    public IEnumerable<TElement> Elements { get; set; }

    [Parameter]
    public RenderFragment ContentTemplate { get; set; }
}