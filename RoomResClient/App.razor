<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <MatToastContainer />
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(RoomResClient.UI.Layout.MainLayout)">
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <LayoutView Layout="@typeof(RoomResClient.UI.Layout.MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>
</Router>